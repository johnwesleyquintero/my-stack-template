{
  "name": "next-nebula-starter",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "author": {
    "name": "John Wesley Quintero",
    "email": "johnwesleyquintero@gmail.com",
    "url": "https://github.com/johnwesleyquintero"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnwesleyquintero/next-nebula-starter.git"
  },
  "bugs": {
    "url": "https://github.com/johnwesleyquintero/next-nebula-starter/issues"
  },
  "homepage": "https://next-nebula-starter.vercel.app",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "postinstall": "npm run prepare",
    "setup": "npm install && npm run prepare",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint --edit",
    "reset": "pwsh ./scripts/reset.ps1"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.0",
    "@tanstack/react-query": "^5.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@playwright/test": "^1.39.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.0.0",
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^8.57.0",
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "eslint-config-next": "^14.1.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "9.1.7",
    "is-ci": "^3.0.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.31",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "type-enum": [2, "always", [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]],
      "scope-case": [2, "always", "lower-case"],
      "subject-case": [2, "always", "lower-case"],
      "body-max-line-length": [2, "always", 72]
    }
  }
}
