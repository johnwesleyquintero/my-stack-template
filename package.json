{
  "name": "next-nebula-starter",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "author": {
    "name": "John Wesley Quintero",
    "email": "johnwesleyquintero@gmail.com",
    "url": "https://github.com/johnwesleyquintero"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnwesleyquintero/next-nebula-starter.git"
  },
  "bugs": {
    "url": "https://github.com/johnwesleyquintero/next-nebula-starter/issues"
  },
  "homepage": "https://next-nebula-starter.vercel.app",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "postinstall": "npm run prepare",
    "setup": "npm install && npm run prepare",
    "pre-commit": "lint-staged",
    "commitlint": "commitlint --edit",
    "reset": "pwsh ./scripts/reset.ps1",
    "clean": "git clean -fdx && npm install"
  },
  "dependencies": {
    "next": "latest",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "typescript": "latest",
    "eslint": "latest",
    "eslint-config-next": "latest"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "type-enum": [2, "always", [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]],
      "scope-case": [2, "always", "lower-case"],
      "subject-case": [2, "always", "lower-case"],
      "body-max-line-length": [2, "always", 72]
    }
  }
}
