{
  "name": "next-nebula-starter",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "John Wesley Quintero",
    "email": "johnwesleyquintero@gmail.com",
    "url": "https://github.com/johnwesleyquintero"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johnwesleyquintero/next-nebula-starter.git"
  },
  "bugs": {
    "url": "https://github.com/johnwesleyquintero/next-nebula-starter/issues"
  },
  "homepage": "https://next-nebula-starter.vercel.app",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "clean": "git clean -fdx && npm install"
  },
  "dependencies": {
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "type-enum": [2, "always", [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]],
      "scope-case": [2, "always", "lower-case"],
      "subject-case": [2, "always", "lower-case"],
      "body-max-line-length": [2, "always", 72]
    }
  }
}
